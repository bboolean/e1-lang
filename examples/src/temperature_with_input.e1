toCelsius (->
  (- 32)
  (* (/ 5 9))
)

toFahrenheit (->
  (* (/ 9 5))
  (+ 32)
)

proc (# input
  (let
    num (toNum input)
    
    celsiusText (->
      num
      toCelsius
      (# x (++ "\n" num "째F is " x "째C"))
    )
    
    fahrenheitText (->
      num
      toFahrenheit
      (# x (++ "\n" num "째C is " x "째F"))
    )
    
    ($
      (log (++ celsiusText fahrenheitText))
      (prompt)
    )
  )
)

prompt (#
  (readline
    "\nPlease enter an number> "
    proc
  )
)

(prompt)
